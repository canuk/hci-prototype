<!-- Page Content -->
<div class="container">

    <div class="row">
        <div class="col-lg-12 text-center">
          <h1>Connect to Coffee Shop WiFi</h1>
          <h2>See what interests people at the <span class="text-success">Coffee Shop</span> <em>right now</em>!</h2>
          <h2 class="form-signin-heading lead"><%= @prompt.prompt_text %></h2>
          <% if @choices.blank? %>
          <label for="inputEmail" class="sr-only">Type your response here!</label>
          <input id="answer" type="input" class="form-control" placeholder="<%= @prompt.prompt_placeholder_text %>" required autofocus>
          <br/>
          <label>
          <% else %>
          <% @choices.each do |choice| %>
          <div class="radio">
            <label>
              <input type="radio" name="choicesRadio" id="choicesRadio<%=choice.id%>" value="<%=choice.id%>">
              <%=choice.choice_text%>
            </label>
          </div>
          <% end %>
          <% end %>

            <input type="checkbox"> I agree to <a href="/pages/terms">the terms</a>.
          </label>

          <button id="connect_and_view" class="btn btn-lg btn-primary btn-block" type="submit">Connect and read the room</button>
          <button id="just_connect" class="btn btn-lg btn-default btn-block" type="submit">Just connect to WiFi</button>
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
<% content_for :footer do %>
<script src="/assets/google_analytics.self-988e49f5dbadf1d7a81363e41c935547701e82df2321e1c8d7a9fd5fd6aee471.js?body=1"></script>
<script type="text/javascript">

 
  $('#connect_and_view').on('click', function(){
    var promptId = <%= @prompt.id %>;
<% if @choices.blank? %> 
    var answer = $('#answer').val();
    
    $.ajax({
      url: "/answers/record?prompt_id="+promptId+"&answer="+answer,
      type: 'POST',
      success: function(msg) {
        document.location.href='/pages/word_cloud/<%=@prompt.id%>';
      }
    });
    
  });
<% else %>
    var answer = $('input[name=choicesRadio]:checked').val();
    $.ajax({
      url: "/answers/record?prompt_id="+promptId+"&choice_id="+answer,
      type: 'POST',
      success: function(msg) {
        document.location.href='/pages/bar_chart/<%=@prompt.id%>';
      }
    });
    
  });
<% end %>  
</script>
<% end %>